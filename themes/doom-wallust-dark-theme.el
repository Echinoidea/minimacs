   (red        '("#FF6767" nil "red"))
   (orange     '("#FFCA85" nil "brightred"))
   (green      '("#61FFCA" nil "green"))
   (teal       '("#61FFCA" nil "brightgreen"))
   (yellow     '("#FFCA85" nil "yellow"))
   (blue       '("#A277FF" nil "brightblue"))
   (dark-blue  '("#A277FF" nil "blue"))
