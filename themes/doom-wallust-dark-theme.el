   ;; Face categories
   (highlight      blue)
   (vertical-bar   (doom-darken base1 0.2))
   (selection      dark-blue)
   (builtin        magenta)
   (comments       (if doom-wallust-dark-brighter-comments 
                       (doom-lighten teal 0.2)
                     (doom-darken fg 0.4)))
